<div class="container header">
    <div class="row">
        <div class="col-6">
            <div class="row titleRow">
                <h1 class="display-4">EAT - DA - BURGER!</h1>
            </div>

            <div class="row">
                <p style="font-size: 24px">
                    Take the burger, and put it in your mouth!<br />
                    ...That's the only way to eat hamburgers.</p>
            </div>

            <div class="row burgerForm">
                <form class="create-form ">
                <div class="form-group">
                    <label for="addBurger" style="margin-right: 10px">Add a New Burger:</label>
                    <input type="text" id="bn" name="burger" placeholder="Enter Burger Name Here" style="margin-right: 5px;">
                    <button type="submit" class="btn">Submit!</button>
                </div>
                </form>
            </div>
        </div>

        <div class="col-6">
            <img src="../assets/img/burger.png">
        </div>
    </div>
</div>

<div class="container burgerStats">
    <div class="row">
        <div class="col-6">

        <div class="card">
            <div class="card-header">
                Ready to Devour</div>
                
            <ul class="list-group list-group-flush">
                {{#each burgers}}
                {{#unless devoured}}

                <li class="list-group-item">
                    {{burger_name}}

            <button type="submit" class="devourStatus devourBtn" data-id="{{id}}" data-eaten="true">
                Devour!</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div> {{! End of Card }}
        </div>

        <div class="col-6">

        <div class="card">
            <div class="card-header">
                Devoured! YUM!</div>

            <ul class="list-group list-group-flush">
                {{#each burgers}}
                {{#if devoured}}

                <li class="list-group-item">
                    {{burger_name}}
                </li>

                {{/if}}
                {{/each}}
            </ul>
        </div> {{! End of Card }}
        </div>
    </div>
</div>
